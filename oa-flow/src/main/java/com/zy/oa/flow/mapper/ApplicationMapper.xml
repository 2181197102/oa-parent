<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zy.oa.flow.mapper.ApplicationMapper">

    <resultMap id="ApplicationResultMap" type="com.zy.oa.flow.model.Application">
        <result property="employeeId" column="employee_id"/>
    </resultMap>

    <insert id="create" parameterType="com.zy.oa.flow.model.Application" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO application ( employee_id, days ) VALUES (#{employeeId}, #{days})
    </insert>

    <select id="findById" parameterType="int" resultMap="ApplicationResultMap">
        SELECT * FROM application WHERE ID = #{id}
    </select>

    <delete id="delete" parameterType="int">
        DELETE FROM application WHERE ID = #{id}
    </delete>

</mapper>